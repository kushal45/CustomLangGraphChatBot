# Environment variables for CustomLangGraphChatBot

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here

# AI Provider Configuration
# Choose one of the following AI providers (set AI_PROVIDER to specify which one to use)
AI_PROVIDER=groq  # Options: groq, huggingface, together, google, openrouter, grok, ollama

# Free AI API Keys (choose one or more)
GROQ_API_KEY=your_groq_api_key_here                    # FREE - Fast inference, good models
HUGGINGFACE_API_KEY=your_huggingface_api_key_here      # FREE tier available
TOGETHER_API_KEY=your_together_api_key_here            # FREE tier available
GOOGLE_API_KEY=your_google_api_key_here                # FREE tier (Gemini)
OPENROUTER_API_KEY=your_openrouter_api_key_here        # FREE tier available

# Paid/Legacy AI APIs
XAI_API_KEY=your_xai_api_key_here                      # Grok (X.AI) - PAID
OPENAI_API_KEY=your_openai_api_key_here                # OpenAI - PAID

# Local AI (No API key needed)
OLLAMA_BASE_URL=http://localhost:11434/v1              # Ollama local server

# Slack Integration (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_TOKEN=your_slack_bot_token_here

# Email Configuration (optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Jira Integration (optional)
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_jira_email@example.com
JIRA_API_TOKEN=your_jira_api_token_here

# Tool Configuration
ENABLE_PYLINT=true
ENABLE_FLAKE8=true
ENABLE_BANDIT=true
ENABLE_COMPLEXITY_ANALYSIS=true
